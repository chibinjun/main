page{
  height: 100%;
  width:100%;
}
.top{
  width: 100%;
  height: 340rpx;
  background-color: #FF9800;
  align-content: center;
  display: flex;
  justify-content: center;
}
.top-box{
  margin: auto 0;
  display: flex;
  flex-direction: column;
}
.top-image{
  height: 132rpx;
  width: 132rpx;
}
.top-box text{
  text-align: center;
  margin: 10rpx 0;
  font-size: 28rpx;
}
.body{
  display: flex;
  height: 196rpx;
  margin: 13rpx;
}
.body-left{
  width:50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid #cbcbcb;
}
.body-right{
  width:50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.item{
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  margin: 10rpx 20rpx;
}
.item-image{
  height: 40rpx;
  width: 40rpx;
  margin-top:15rpx;
}
.item text{
  flex: 1;
  margin-top:15rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
}
.item-image1{
  height: 60rpx;
  width: 60rpx;
  margin-top:7rpx;
}
.item.solid{
  border-bottom: 1rpx solid #dbdbdb;
}